import BIDMat.TMat

def testTMatmadd(){
    val b=TMat(4,4,Array(1,2),Array(0,3),Array(GMat(FMat(2,3,Array(1,2,3,4,5,6))),GMat(FMat(2,1,Array(7,8)))));
    //println(full(b))
    val c=grand(5,4);
    val d=c.zeros(4,5);
    b.madd(c,d,true,true);
    val bb=full(b);
    val dd=c.zeros(4,5)
    bb.madd(c,dd,true,true)
    println("Should print 0:  %.5f" format sum(sum(d-dd)).dv)
}

def testGMatmadd(){
    val b=TMat(4,4,Array(1,2),Array(0,3),Array(GMat(FMat(2,3,Array(1,2,3,4,5,6))),GMat(FMat(2,1,Array(7,8)))));
    val c=grand(4,5)
    val d=grand(5,4)
    val bb=d.zeros(4,4)
    bb<--full(b)
    c.madd(d,b,false,false)
    c.madd(d,bb,false,false)
    println("The overlapping non-zero values of the following two mats should be the same")
    println(bb)
    println(full(b))
    println("Should print 0:  %.5f" format sum(sum(full(b-bb))).dv)
}

testTMatmadd()
testGMatmadd()

